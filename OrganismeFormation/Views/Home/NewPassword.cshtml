@model OrganismeFormation.ViewModels.PasswordViewModel
@{
    ViewBag.Title = "Récupération mot de passe"; 
}

    
    <div id="form-div">

        <div class="title-login-for">
            Récupération du mot de passe
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-div-inputs">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @autocomplete = "off", @class = "feedback-input", @placeholder = "Adresse email", @id = "icon-tete" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                <div class="submit">
                    <input type="submit" value="Valider" id="button-blue" />
                    <div class="ease"></div>
                </div>
            </div>
        }
    </div>



  

