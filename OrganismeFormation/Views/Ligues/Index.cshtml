@model IEnumerable<OrganismeFormation.Models.Ligues>


@{
    ViewBag.Title = "Ligues";
}
<div class="content">
    <div class="title-content">
        <div class="title-content-main">Gestion des organismes de formation</div>
        <div class="title-content-second">Affichage des ligues</div>
    </div>
    <p>
        <div style="width: 130px;text-align:center">
            <div class="submit">
                <a href='@Url.Action("create", "Ligues")' id="button-blue">Nouvelle Ligue</a>
                <div class="ease"></div>
            </div>
        </div>
    </p>
    <table class="table" id="mano-bootstrap">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Libelle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.login)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Libelle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.login)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.email)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
    @{Html.RenderPartial("_Footer");}
</div>  
