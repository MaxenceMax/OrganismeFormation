@model OrganismeFormation.Models.CandidatsFormations
@{
    ViewBag.Title = "NewCandidatSecondStep";
}

<div class="content">
    <div class="title-content">
        <div class="title-content-main">Gestion des organismes de formation</div>
        <div class="title-content-second">Edition du candidat @Model.Nom&nbsp;@Model.Prenom</div>
    </div>
