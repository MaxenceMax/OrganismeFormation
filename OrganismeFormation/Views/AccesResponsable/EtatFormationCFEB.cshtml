@model OrganismeFormation.ViewModels.ListeFormationEtatViewModel
@{
    ViewBag.Title = "EtatFormationAC";
}

<div class="content">
    <div class="title-content">
        <div class="title-content-main">Gestion des organismes de formation</div>
        <div class="title-content-second">Formations CFEB pour l'organisme : @Model.organisme.Libelle</div>
    </div>
    <p>
        <div style="width: 130px;text-align:center;display:inline-block">
            <div class="submit">
                <a href='@Url.Action("create", "Ligues")' id="button-blue">Nouvelle Ligue</a>
                <div class="ease"></div>
            </div>
        </div>
        <div style="width: 130px;text-align:center;margin-left:10px;display:inline-block">
            <div class="submit">
                <a href='@Url.Action("ListeFormations", "AccesResponsable", new { id = Model.organisme.Id })' id="button-red">Retour</a>
                <div class="ease"></div>
            </div>
        </div>
    </p>
    <div class="form-horizontal" id="mano-bootstrap">
        <h3> Formations CFEB en cours :</h3>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.enCours.First().DateDebut)
                </th>
            </tr>
        </table>
        <h3> Formations CFEB terminée :</h3>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.enCours.First().DateDebut)
                </th>
            </tr>
        </table>
    </div>
    @{Html.RenderPartial("_Footer");}
</div>
