                    @Html.EditorFor(model => model.Candidat.StructureAccueil, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Candidat.StructureAccueil, "", new { @class = "text-danger" })
                </div>
            </div>
            <p>Informations du tuteur</p>
            <hr />
            <div class="form-group">
                @Html.LabelFor(model => model.Tuteur.Nom, htmlAttributes: new { @class = "control-label col-md-2" })
