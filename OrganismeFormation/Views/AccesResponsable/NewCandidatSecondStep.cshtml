                    @Html.EditorFor(model => model.Candidat.Nom, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Candidat.Nom, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Candidat.Prenom, htmlAttributes: new { @class = "control-label col-md-2" })
