                </div>
            </div>
            <div class="form-group-align">
                <div class="submit" id="form-moitie" style="margin-right:2.5px">
                    <input type="submit" value="Valider" id="button-blue" />
                    <div class="ease"></div>
                </div>
                <div class="submit" id="form-moitie" style="margin-left:2.5px">
                    <a href='@Url.Action("NewCandidatFirstStep", "AccesResponsable", new { id = Model.Formation.Id})' id="button-red">Retour</a>
                    <div class="ease"></div>
                </div>
