                    @Html.EditorFor(model => model.Candidat.Grade, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Candidat.Grade, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Candidat.Email, htmlAttributes: new { @class = "control-label col-md-2" })
