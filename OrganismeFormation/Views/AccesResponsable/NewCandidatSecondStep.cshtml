@model OrganismeFormation.ViewModels.CandidatFormationViewModel
@{
    ViewBag.Title = "NewCandidatSecondStep";
}

<div class="content">
    <div class="title-content">
        <div class="title-content-main">Gestion des organismes de formation</div>
        <div class="title-content-second">Ajout d'un candidat</div>
    </div>
    <div class="form-horizontal" id="mano-bootstrap">
        @using (Html.BeginForm())
        {

            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Formation.Id)
            @Html.HiddenFor(model => model.Tuteur.Id)
            @Html.HiddenFor(model => model.Candidat.Id)
            @Html.HiddenFor(model => model.Candidat.Sexes.Id)

            <p>Informations générales</p>
            <hr />
            <div class="form-group">
                @Html.LabelFor(model => model.Candidat.Nom, htmlAttributes: new { @class = "control-label col-md-2" })
