@model OrganismeFormation.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
}
    @using (Html.BeginForm(new { @autocomplete = "off" }))
    {
        @Html.AntiForgeryToken()
        <div id="form-div">

            <div class="title-login-for">
                Connexion
            </div>
            <div class="form-div-inputs">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @autocomplete = "off", @class = "feedback-input", @placeholder = "Identifiant", @id = "icon-tete" } })
                @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })

                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @autocomplete = "off", @class = "feedback-input", @placeholder = "Mot de passe", @id = "icon-password" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

                <div class="submit">
                    <input type="submit" value="Se connecter" id="button-blue" />
                    <div class="ease"></div>
                </div>
            </div>
        </div>

    }